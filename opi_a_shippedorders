CREATE OR REPLACE VIEW tableau.opi_a_shippedorders
(
  caseid,
  inboundcarrier,
  inboundtrackingnumber,
  entereddate,
  outboundcarrier,
  outboundtrackingnumber,
  shippedoutdate,
  invoiceddate,
  productid,
  price,
  quantity,
  shiptype,
  casetype,
  remakeid,
  linkedto
)
AS 
 SELECT s.orderid AS caseid, 
        CASE
            WHEN s.isreturn::text = 'true'::character varying::text THEN s.carriername
            ELSE NULL::character varying
        END AS inboundcarrier, 
        CASE
            WHEN s.isreturn::text = 'true'::character varying::text THEN s.trackingnumber
            ELSE NULL::character varying
        END AS inboundtrackingnumber, o.dateinvoicedlocaldts AS entereddate, 
        CASE
            WHEN s.isreturn::text = 'false'::character varying::text THEN s.carriername
            ELSE NULL::character varying
        END AS outboundcarrier, 
        CASE
            WHEN s.isreturn::text = 'false'::character varying::text THEN s.trackingnumber
            ELSE NULL::character varying
        END AS outboundtrackingnumber, s.shipmentdate AS shippedoutdate, o.dateinvoicedlocaldts AS invoiceddate, oi.productid, 
        CASE
            WHEN o.ordertype::text = 'Remake'::text THEN '0'::character varying
            ELSE s.cost
        END AS price, oi.quantity, NULL::"unknown" AS shiptype, NULL::"unknown" AS casetype, NULL::"unknown" AS remakeid, NULL::"unknown" AS linkedto
   FROM fct.elektra_shipping s
   LEFT JOIN fct."order" o ON s.orderid::text = o.orderid::character varying::text
   JOIN fct.orderitem oi ON o.orderid = oi.orderid
UNION 
 SELECT s.orderid AS caseid, 
        CASE
            WHEN s.isreturn::text = 'true'::character varying::text THEN s.carriername
            ELSE NULL::character varying
        END AS inboundcarrier, 
        CASE
            WHEN s.isreturn::text = 'true'::character varying::text THEN s.trackingnumber
            ELSE NULL::character varying
        END AS inboundtrackingnumber, eo.dateinvoicedlocaldts AS entereddate, 
        CASE
            WHEN s.isreturn::text = 'false'::character varying::text THEN s.carriername
            ELSE NULL::character varying
        END AS outboundcarrier, 
        CASE
            WHEN s.isreturn::text = 'false'::character varying::text THEN s.trackingnumber
            ELSE NULL::character varying
        END AS outboundtrackingnumber, s.shipmentdate AS shippedoutdate, eo.dateinvoicedlocaldts AS invoiceddate, eoi.productid, 
        CASE
            WHEN eoi.remakeof IS NOT NULL THEN '0'::character varying
            ELSE s.cost
        END AS price, eoi.quantity, NULL::"unknown" AS shiptype, NULL::"unknown" AS casetype, NULL::"unknown" AS remakeid, NULL::"unknown" AS linkedto
   FROM fct.elektra_shipping s
   LEFT JOIN cal.elektraorder eo ON s.orderid::text = eo.orderid::text
   JOIN cal.elektraorderitem eoi ON eo.orderid::text = eoi.orderid::text;


GRANT INSERT, SELECT, UPDATE, RULE, DELETE, TRIGGER, REFERENCES ON tableau.opi_a_shippedorders TO cloudbeam;
GRANT SELECT ON tableau.opi_a_shippedorders TO _ops;


COMMIT;
